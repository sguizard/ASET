profiles {

    lh {
        process {
            // Change this according to your environment
            executor        = 'slurm'
            scratch         = false
            clusterOptions  = "--account=brcf_bfx_project"
            queue           = 'brcf_bfx_project'
            time            = '240h'
        }
    }


    cluster {
        process {
            // Change this according to your environment
            executor        = 'slurm'
            scratch         = false
            clusterOptions  = "--account=bis0"
            queue           = 'standard'
            time            = '240h'
        } 
    } 

    docker {
        docker {
            enabled = true
            autoMounts = true
            runOptions = '--user \$(id -u):\$(id -g) --group-add 100'
      }
    }

    singularity {
        singularity {
            enabled = true
            autoMounts = true
            pullTimeout = '60m'
      }
    }
}

